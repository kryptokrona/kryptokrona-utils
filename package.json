{
  "name": "turtlecoin-utils",
  "version": "1.0.20",
  "description": "A Node.js collection of utilities useful for TurtleCoin developers",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "config.json",
    "index.d.ts",
    "dist/TurtleCoinUtils.js",
    "lib/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "standard && mocha tests/tests.js",
    "build-docs": "jsdoc -c jsdoc.json",
    "prepare": "webpack"
  },
  "keywords": [
    "TurtleCoin",
    "Utilities"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/turtlecoin-utils.git"
  },
  "author": "Brandon Lehmann <brandonlehmann@gmail.com>",
  "contributors": [
    "zpalmtree <22151537+zpalmtree@users.noreply.github.com>"
  ],
  "license": "GPL-3.0",
  "optionalDependencies": {
    "turtlecoin-crypto": "^3.1.3"
  },
  "dependencies": {
    "crc": "^3.8.0",
    "get-random-values": "^1.2.0",
    "numeral": "^2.0.6",
    "secure-random-string": "^1.1.0",
    "varint": "^5.0.0"
  },
  "standard": {
    "ignore": [
      "lib/turtlecoin-crypto/turtlecoin-crypto.js",
      "lib/turtlecoin-crypto/turtlecoin-crypto-wasm.js",
      "dist/*",
      "docs/*"
    ]
  },
  "devDependencies": {
    "mocha": "^6.2.2",
    "standard": "^12.0.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
